<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/modal_dialog_bg">

        <TextView
            android:id="@+id/numberKeyboardHeaderTv"
            style="@style/ModalHeader"
            android:layout_width="match_parent"
 />

        <pl.maniak.wikidiary.views.NumberKeyboardView
            android:id="@+id/numberKeyboardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            android:layout_below="@id/numberKeyboardHeaderTv"
            android:layout_margin="5dp" />

    </RelativeLayout>


</RelativeLayout>