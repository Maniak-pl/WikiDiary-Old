<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent">

    <LinearLayout
        android:id="@+id/custom_root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:background="@drawable/modal_dialog_white_bg"
        >

        <TextView
            android:id="@+id/custom_title"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center"
            android:layout_marginTop="@dimen/padding_small"
            android:layout_marginLeft="@dimen/padding_small"
            android:layout_marginRight="@dimen/padding_small"
            android:text="Nowe zadanie:"/>

        <EditText
            android:id="@+id/custom_edit_todo"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:padding="@dimen/padding_small"
            android:background="@drawable/modal_dialog_gray_bg"
            android:gravity="start"
            android:textColor="@color/black">

            <requestFocus/>
        </EditText>

        <TextView
            android:id="@+id/custom_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/modal_dialog_black_bg"
            android:gravity="center"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/padding_small"
            android:orientation="horizontal">

            <Button
                android:id="@+id/custom_button_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:text="Anuluj"
                />

            <Button
                android:id="@+id/custom_button_commit"
                style="button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:text="ZatwierdÅº"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>